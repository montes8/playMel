<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <TextView
        android:layout_width="@dimen/general"
        android:layout_height="wrap_content"
        android:id="@+id/TextTitleMusic"
        android:gravity="center"
        android:textSize="@dimen/text_size_fifteen"
        android:fontFamily="@font/dootype_italicbold"
        android:text="@string/txt_title_music"
        android:textColor="@color/colorPrimary"
        android:padding="@dimen/text_size_fifteen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/rvListMusic"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListMusic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/general"
        android:clipToPadding="false"
        android:layout_marginTop="@dimen/size_twenty"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TextTitleMusic"
        tools:itemCount="4" />

</androidx.constraintlayout.widget.ConstraintLayout>